<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="0.5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tvDanhmuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tvLoaiTien"
            android:padding="5dp"
            android:text="Danh mục"
            android:textColor="#04c6bb"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/imgKhoanThu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_customthu" />

        <TextView
            android:id="@+id/tvLoaiTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="73dp"
            android:padding="5dp"
            android:text="Bitcoin"
            android:textColor="#444747"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="73dp" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:text="2000000"
            android:layout_marginRight="40dp"
            android:textColor="#ff0000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text=" vnđ"
            android:textColor="#f9061a" />

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/pencil" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvDanhmuc"
            android:padding="5dp"
            android:text="23/5/2018"
            android:textColor="#05050a"
            android:textSize="15sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>